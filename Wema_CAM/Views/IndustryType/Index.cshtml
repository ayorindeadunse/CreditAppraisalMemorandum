@model IEnumerable<Wema_CAM.Models.IndustryType>

@{
    ViewBag.Title = "Index";
}

<script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.9.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jtable/jquery.jtable.js")" type="text/javascript"></script>


<h2></h2>

<div id="FormTemplate"></div>

<script type="text/javascript">

    $(document).ready(function () {


 $('#FormTemplate').jtable({
            title: 'Industry Type List',
            paging: true, //Enable paging
            pageSize: 10, //Set page size (default: 10)
            sorting: true, //Enable sorting
            defaultSorting: 'Name ASC', //Set default sorting
            actions: {
                listAction: 'IndustryType/GetIndustryTypeList',
                deleteAction: 'IndustryType/DeleteIndustryType',
                updateAction: 'IndustryType/EditIndustryType',
                createAction: 'IndustryType/AddIndustryType'
            },
            fields: {
                id: {
                    key: true,
                    create: false,
                    edit: false,
                    list: false
                },
                industrydescription: {
                    title: 'Industry Type',
                    width: '23%',
                    create: true,
                    edit: true,
                    list:true
                }
                ,
               
            }
        });

        //Load student list from server
        $('#FormTemplate').jtable('load');
    });
 
</script>

