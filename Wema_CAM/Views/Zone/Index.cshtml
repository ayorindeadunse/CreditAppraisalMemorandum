@model IEnumerable<Wema_CAM.Models.Zone>

@{
    ViewBag.Title = "Index";
}
<script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.9.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jtable/jquery.jtable.js")" type="text/javascript"></script>

<h2></h2>

<div id="FormTemplate"></div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#FormTemplate').jtable({
            title: 'Zone List',
            paging: true, //Enable paging
            pageSize: 10, //Set page size (default: 10)
            sorting: true, //Enable sorting
            defaultSorting: 'Name ASC', //Set default sorting
            actions: {
                listAction: 'Zone/GetZoneList',
                deleteAction: 'Zone/DeleteZone',
                updateAction: 'Zone/EditZone',
                createAction: 'Zone/AddZone'
            },
            fields: {
                ZoneId: {
                    key: true,
                    create: false,
                    edit: false,
                    list: false
                },
                ZoneName: {
                    title: 'Name',
                    width: '23%'
                }
                ,
                RegionId: {
                    title: 'Region',
                    width: '23%',
                    options: 'Zone/GetRegionList'
                },
                CreationDate: {
                    title: 'Date Created',
                    width: '23%',
                    create: false,
                    edit: false
                }
                ,
                DateLastUpdated: {
                    title: 'Date Updated',
                    width: '23%',
                    create: false,
                    edit: false
                }
                ,
                UpdateUserId: {
                    title: 'Updated by',
                    width: '23%',
                    create: false,
                    edit: false
                }
            }
        });

        //Load student list from server
        $('#FormTemplate').jtable('load');
    });
 
</script>

